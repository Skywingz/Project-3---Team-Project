<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:padding="12dp"
    android:background="@drawable/yellow_border_green">

    <TextView
        android:id="@+id/allQuestCompletedPopupTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="All quests completed!\nAwesome!"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/allQuestCompletedPopupDoneButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/allQuestCompletedPopupTitle"
        android:text="DONE"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/cyan_500"
        android:gravity="center"
        android:background="@color/transparent"/>




</RelativeLayout>