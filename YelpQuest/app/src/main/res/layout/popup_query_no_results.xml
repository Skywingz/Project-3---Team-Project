<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:padding="12dp"
    android:background="@drawable/yellow_border_bluegreen">

    <TextView
        android:id="@+id/noResultsPopupTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:text="NO RESULTS FOUND"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/noResultsPopupText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noResultsPopupTitle"
        android:layout_marginBottom="6dp"
        android:gravity="left|center_vertical"
        android:text="Your search field inputs did not find appropriate results."
        android:textColor="@color/orange_500"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/noResultsPopupText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noResultsPopupText1"
        android:layout_marginBottom="6dp"
        android:gravity="left|center_vertical"
        android:text="Do you want to use previously completed locations?"
        android:textColor="@color/orange_500"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <LinearLayout
        android:id="@+id/noResultsPopupLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noResultsPopupText2"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/noResultsPopupCancelButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="cancel"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/red_900"
            android:gravity="center"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/noResultsPopupYesButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="YES"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/green_A700"
            android:gravity="center"
            android:background="@color/transparent"/>


    </LinearLayout>




</RelativeLayout>